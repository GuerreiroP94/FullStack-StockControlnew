{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "será sobrescrito pela variável DATABASE_URL do Railway"
  },

  "JwtSettings": {
    "Secret": "será sobrescrito pela variável JWT_SECRET",
    "Issuer": "PreSystem.Production",
    "Audience": "PreSystem.Production",
    "ExpirationMinutes": 480
  },

  "EmailSettings": {
    "UseDevelopmentMode": false,
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUser": "será sobrescrito pela variável EMAIL_SMTP_USER",
    "SmtpPassword": "será sobrescrito pela variável EMAIL_SMTP_PASSWORD",
    "FromEmail": "será sobrescrito pela variável EMAIL_FROM",
    "FromName": "Stock Control System",
    "EnableSsl": true,
    "Timeout": 30000
  },

  "FrontendUrl": "será sobrescrito pela variável FRONTEND_URL",

  "Features": {
    "EnableSwagger": false,
    "EnableDetailedErrors": false,
    "EnableCors": true
  },

  "Security": {
    "RequireHttps": true,
    "AllowedHosts": [
      "*.railway.app",
      "*.pages.dev"
    ]
  }
}